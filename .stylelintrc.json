{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "no-empty-source": null,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen"
                ]
            }
        ]
    }
}